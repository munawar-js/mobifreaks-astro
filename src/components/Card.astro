---
interface Props {
	title: string;
	demoURL: string;
	downloadURL: string;
	githubURL: string;
	imageURL: string;
}

const { demoURL, title, downloadURL, githubURL, imageURL } = Astro.props;
---

<div class="link-card">
	<a href={demoURL}><img src={imageURL} alt={title + " preview"}/></a>
	<div class="buttons">
		<header>
			<h2>{title}</h2>
		</header>
		<a href={demoURL}>Demo</a>
		<a href={downloadURL}>Download</a>
		<a href={githubURL}>Github</a>
	</div>
</div>
<style>
	.link-card {
		display: block;
		background-color: #19243d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
		overflow: hidden;
	}
	.link-card > .buttons {
		padding: 1rem;
	}
	.link-card img {
		max-width: 100%;
	}
	.link-card a {
		text-decoration: none;
		border-radius: 8px;
		color: white;
		opacity: 0.8;
		margin-right: 1.25rem;
		font-size: 14px;
		&:hover {
			color: pink;
		}
	}
	h2 {
		margin: 0 0 .5rem;
		font-size: 18px;
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
</style>
